{
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2019
    },
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-unused-vars": [
            "off"
        ],
        "no-useless-escape": [
            "off"
        ],
        "no-trailing-spaces": [
            "error"
        ]
    }
}